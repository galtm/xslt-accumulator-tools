<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
    xmlns:myv="my-xspec-variables"
    stylesheet="../internal-elem-trace.xsl"
    run-as="import">

    <x:scenario label="Values of internal-elem accumulator" focus="h">
        <x:variable name="myv:tree"
            href="../sample-xml/section-with-internal-content.xml"
            select="/"/>
        <!-- x:call satisfies XSpec compiler -->
        <x:call function="true"/>
        <x:expect
            label="Start of subsection remark has 2 internal-only elements in stack"
            test="$myv:tree/section/section/remark/accumulator-before('internal-elem')"
            select="('remark', 'section')"/>
        <x:expect
            label="End of subsection remark has 1 internal-only element in stack"
            test="$myv:tree/section/section/remark/accumulator-after('internal-elem')"
            select="('section')"/>
        <x:expect
            label="At end of document, stack is empty"
            test="$myv:tree/accumulator-after('internal-elem')"
            select="()"/>

        <!-- Variation: Boolean @test and no @select -->
        <x:expect
            label="At end of document, stack is empty"
            test="empty($myv:tree/accumulator-after('internal-elem'))"/>
    </x:scenario>

